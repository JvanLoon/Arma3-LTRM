<Window x:Class="Arma_3_LTRM.DownloadProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Downloading Repository Files" 
        Height="350" 
        Width="550" 
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        FontFamily="Calibri">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Downloading files from repositories..." FontWeight="Bold" Margin="0,0,0,10"/>
        
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,0,0,10">
            <TextBlock x:Name="ProgressTextBlock" TextWrapping="Wrap" FontFamily="Consolas" FontSize="11"/>
        </ScrollViewer>

        <Button x:Name="CloseButton" Grid.Row="2" Content="Close" Width="100" Height="30" HorizontalAlignment="Right" 
                Click="CloseButton_Click" IsEnabled="False"/>
    </Grid>
</Window>
