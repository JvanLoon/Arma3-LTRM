<Window x:Class="Arma_3_LTRM.Views.AddEditServerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Server" Height="450" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="#1E1E1E"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#3F3F46"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style TargetType="PasswordBox">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#3F3F46"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style TargetType="Button" x:Key="ActionButton">
            <Setter Property="Background" Value="#0E639C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1177BB"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="Server Name" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox x:Name="NameTextBox"/>
        </StackPanel>

        <StackPanel Grid.Row="2">
            <TextBlock Text="Address (IP or Hostname)" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox x:Name="AddressTextBox"/>
        </StackPanel>

        <StackPanel Grid.Row="4">
            <TextBlock Text="Port" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox x:Name="PortTextBox" Text="2302" />
        </StackPanel>

        <StackPanel Grid.Row="6">
            <TextBlock Text="Password (optional)" FontWeight="Bold" Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox"/>
        </StackPanel>

        <StackPanel Grid.Row="10" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Save" Width="100" Style="{StaticResource ActionButton}" 
                    Click="SaveButton_Click" Margin="0,0,10,0"/>
            <Button Content="Cancel" Width="100" Style="{StaticResource ActionButton}" 
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
